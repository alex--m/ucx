/**
 * Construct a UCB version identifier from major and minor version numbers.
 */
#define UCB_VERSION(_major, _minor) \
	(((_major) << UCB_VERSION_MAJOR_SHIFT) | \
	 ((_minor) << UCB_VERSION_MINOR_SHIFT))
#define UCB_VERSION_MAJOR_SHIFT    24
#define UCB_VERSION_MINOR_SHIFT    16


/**
 * UCB API version is @MAJOR_VERSION@.@MINOR_VERSION@
 */
#define UCB_API_MAJOR    @MAJOR_VERSION@
#define UCB_API_MINOR    @MINOR_VERSION@
#define UCB_API_VERSION  UCB_VERSION(@MAJOR_VERSION@, @MINOR_VERSION@)
